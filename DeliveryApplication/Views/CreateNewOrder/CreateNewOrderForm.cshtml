@model DeliveryApplication.Models.DataBase.Order
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<h1>hello there!</h1>
<form asp-controller="CreateNewOrder" asp-action="ShowNewOrder" method="post">
    <label asp-for="AddressOfSender">Адрес отправителя</label>
    <input type="text" asp-for="AddressOfSender" />
    <span asp-validation-formaction="AddressOfSender"></span>

    <label asp-for="CityOfSender">Город отправителя</label>
    <input type="text" asp-for="CityOfSender" />
    <span asp-validation-formaction="CityOfSender"></span>

    <label asp-for="AddressOfRecipient">Адрес получателя</label>
    <input type="text" asp-for="AddressOfRecipient" />
    <span asp-validation-formaction="AddressOfRecipient"></span>

    <label asp-for="CityOfRecipient">Город получателя</label>
    <input type="text" asp-for="CityOfRecipient" />
    <span asp-validation-formaction="CityOfRecipient"></span>

    <label asp-for="CargoWeight">Вес груза</label>
    <input type="number" value="0" min="0.1" max="100" step="0.1" asp-for="CargoWeight" />
    <span asp-validation-formaction="CargoWeight"></span>

    <label asp-for="CargoPickupDate">Дата забора груза</label>
    <input type="date" asp-for="CargoPickupDate" />
    <span asp-validation-formaction="CargoPickupDate"></span>

    <button type="submit">Создать новый заказ</button>
</form>